<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background_anak">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/centerhorizontaline" />

    <RelativeLayout
        android:id="@+id/centerverticaline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_above="@+id/centerhorizontaline"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/profile_photo"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/nama_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/wallet_icon"/>

    <ImageView
        android:id="@+id/wallet_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/centerhorizontaline"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_account_balance_wallet_24"
        app:tint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerhorizontaline"
        android:text="Rp 500.000"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerhorizontaline"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#c61236"
        android:text="KELUAR" />




</RelativeLayout>